/* 弹窗部分样式 */
.modal-mask {width: 100%;height: 100%;position: fixed;top: 0;left: 0;background: #000;
opacity: 0.5;overflow: hidden;z-index: 9000;color: #fff;}
.modal-dialog {width: 540rpx; overflow: hidden;position: fixed;top: 40%;left: 0;z-index: 9999; background: #f9f9f9; margin: -180rpx 105rpx;border-radius: 36rpx;}
.modal-title {height: 105rpx;font-size: 36rpx;background: #fe6c6c;color: white;
  display: flex;justify-content: center;align-items: center;}
.modal-input {height: 250rpx;background: white;display: flex;justify-content: center;align-items: center;flex-wrap:wrap;}
.input1{border: 1px solid rgba(144, 144, 144, 0.562);height: 80rpx;width: 400rpx;margin-left: 30rpx;text-align: center;}
.modal-footer {display: flex;flex-direction: row;height: 86rpx;border-top: 1px solid #dedede;font-size: 34rpx;line-height: 86rpx;background: white;}
.btn-cancel {width: 50%;color: #fe6c6c;text-align: center;border-right: 1px solid #dedede;}
.btn-confirm {width: 50%;color: black;text-align: center;}

.select_box{background: #fff;width: 400rpx;margin-left: 30rpx;text-align: center;position: relative;}
.select{box-sizing: border-box;width: 100%;height: 70rpx;border:1px solid rgba(144, 144, 144, 0.562);border-radius: 8rpx;display: flex;align-items: center;padding: 0 20rpx;}
.select_text{font-size: 30rpx;flex: 1;}
.select_img{width: 28rpx;height: 16rpx;display: block;transition:transform 0.3s;}
.select_img_rotate{transform:rotate(180deg); }
.option_box{position: absolute;top: 70rpx;left:-1rpx;width: 404rpx;border:1px solid #efefef;box-sizing: border-box;height: 0;overflow-y: auto;border-top: 0;background: #fff;transition: height 0.3s;z-index: 100;}
.option{display: block;line-height: 70rpx;margin-left:-27rpx;font-size: 30rpx;border-bottom: 1px solid #efefef;padding: 0rpx;}